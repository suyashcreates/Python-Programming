
```python
"""
PROJECT: Number Guessing Game
Description: Interactive game using loops and conditionals
"""

import random

print("=" * 50)
print("        ðŸŽ¯ NUMBER GUESSING GAME ðŸŽ¯")
print("=" * 50)

def play_game():
    difficulty = input("\nChoose difficulty (easy/medium/hard): ").lower()
    
    if difficulty == "easy":
        max_num = 50
        max_attempts = 10
    elif difficulty == "hard":
        max_num = 500
        max_attempts = 8
    else:  # medium (default)
        max_num = 100
        max_attempts = 7
    
    secret_number = random.randint(1, max_num)
    attempts = 0
    guesses = []
    
    print(f"\nðŸŽ® I'm thinking of a number between 1 and {max_num}")
    print(f"ðŸ“Š You have {max_attempts} attempts. Good luck!\n")
    
    while attempts < max_attempts:
        attempts += 1
        remaining = max_attempts - attempts
        
        try:
            guess = int(input(f"Attempt {attempts}/{max_attempts} - Your guess: "))
        except ValueError:
            print("âš ï¸  Please enter a valid number!")
            attempts -= 1
            continue
        
        guesses.append(guess)
        
        if guess == secret_number:
            print("\n" + "ðŸŽ‰" * 20)
            print(f"   CONGRATULATIONS! You got it in {attempts} attempts!")
            print("ðŸŽ‰" * 20)
            
            # Score calculation
            score = (max_attempts - attempts + 1) * 100
            print(f"\nðŸ“Š Your Score: {score} points")
            break
        elif guess < secret_number:
            print(f"   ðŸ“ˆ Too LOW! ", end="")
            diff = secret_number - guess
            if diff > max_num // 4:
                print("Way too low!")
            elif diff > max_num // 10:
                print("Getting warmer...")
            else:
                print("Very close!")
        else:
            print(f"   ðŸ“‰ Too HIGH! ", end="")
            diff = guess - secret_number
            if diff > max_num // 4:
                print("Way too high!")
            elif diff > max_num // 10:
                print("Getting warmer...")
            else:
                print("Very close!")
        
        if remaining > 0:
            print(f"   ðŸ’¡ {remaining} attempts remaining\n")
    else:
        print("\n" + "ðŸ˜¢" * 10)
        print(f"   Game Over! The number was {secret_number}")
        print("ðŸ˜¢" * 10)
    
    # Game Statistics
    print("\nðŸ“ˆ GAME STATISTICS:")
    print(f"   â€¢ Total Guesses: {len(guesses)}")
    print(f"   â€¢ Your Guesses: {guesses}")
    if guesses:
        print(f"   â€¢ Highest Guess: {max(guesses)}")
        print(f"   â€¢ Lowest Guess: {min(guesses)}")
    
    return attempts < max_attempts  # Return True if won

# Main Game Loop
total_games = 0
wins = 0

while True:
    if play_game():
        wins += 1
    total_games += 1
    
    print(f"\nðŸ“Š Overall Stats: {wins}/{total_games} games won")
    
    play_again = input("\nðŸ”„ Play again? (yes/no): ").lower()
    if play_again != "yes":
        print("\nðŸ‘‹ Thanks for playing! See you next time!")
        print("=" * 50)
        break
```

